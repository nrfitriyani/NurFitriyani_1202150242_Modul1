<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nurfitriyani.example.com.nurfitriyani_1202150242_modul1.MainActivity">

    <TextView
        android:id="@+id/makanApa"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_above="@+id/samaSiapa"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Makan Malam"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/samaSiapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/makanApa"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:text="dengan Milea"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="57dp" />

    <Button
        android:id="@+id/eatbusButton"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/berapaPorsi"
        android:layout_below="@+id/berapaPorsi"
        android:layout_marginStart="20dp"
        android:layout_marginTop="38dp"
        android:background="#f4428c"
        android:onClick="tombolEat"
        android:text="Eatbus"
        android:textColor="#fffcfd"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="279dp" />

    <Button
        android:id="@+id/abnormalButton"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/eatbusButton"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/eatbusButton"
        android:background="#f4428c"
        android:onClick="tombolabnormal"
        android:text="ABNORMAL"
        android:textColor="#fffcfd"
        tools:layout_editor_absoluteX="231dp"
        tools:layout_editor_absoluteY="279dp" />

    <EditText
        android:id="@+id/makanApa"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/berapaPorsi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:inputType="text|textPersonName" />

    <EditText
        android:id="@+id/berapaPorsi"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textCapCharacters|textPersonName"
        android:text="" />
</RelativeLayout>

